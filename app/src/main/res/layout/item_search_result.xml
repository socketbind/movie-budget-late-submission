<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_result_height"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/result_poster"
        android:layout_width="@dimen/search_result_poster_width"
        android:layout_height="@dimen/search_result_poster_height"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/result_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/search_result_picture_divider_margin"
        android:gravity="center_vertical"
        tools:text="The Matrix"/>

</LinearLayout>